<h1>Burgers!</h1>

<h2>List of Our Burgers</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Not Available</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form action="" class="create-form">
    <div class="form-group">
        <label for="nm">Burger Name:</label> <br>
        <input type="text" name="name" id="nm">
    </div>
    <div class="form-group">
        <label for="eat">Ready</label><br>
        <input type="radio" name="eat" value="1" checked> Ready<br>
        <input type="radio" name="eat" value="0"> Not Ready
    </div>
    <button type="submit">Add Burger</button>
</form>

