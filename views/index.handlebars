<div class="container text-center" style="margin-top: 120px;">
    <h1>Eat-Da-Burgers</h1>
    <img src="/assets/img/brg.png" alt="">

<div class="row text-left">
    <div class="col-6">
        <ul>
            {{#each burgers}}
                {{#unless devoured}} 
                    {{>burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-6">
        <ul>
            {{#each burgers}}
                {{#if devoured}} 
                    {{>burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

</div>

    <form class="create-form">
        <div class="form-group">
            <input type="text" name="name" id="nm" style="height: 60px;">
        </div>
        <button class="btn btn-light" type="submit">Add Burger</button>
    </form>
</div>